<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    tools:context=".ui.address.AddAddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="Address"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="TextFields,SpeakableTextPresentCheck" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/address_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="#FF0000"
            android:visibility="gone" />


        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="City"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="TextFields,SpeakableTextPresentCheck" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/city_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="#FF0000"
            android:visibility="gone" />


        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <Spinner
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/border"
                android:hint="State"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:spinnerMode="dropdown"

                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/state_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="#FF0000"
            android:visibility="gone" />


        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="Pin code"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="TextFields,SpeakableTextPresentCheck" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/pincode_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="#FF0000"
            android:visibility="gone" />

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/border"
                android:hint="Country"
                android:spinnerMode="dropdown"

                />

        </android.support.design.widget.TextInputLayout>

        <TextView
